include _mixins
#edit-card.Edit-Card
  form(hx-put="/cards/" + list.id + "/" + card.id , hx-target="#edit-card", hx-swap="outerHTML")
    .Card
      textarea.Edit-Card-Textarea(name="label", style='height: 34px;', maxlength="300")
        | #{card.label}
      input(type="hidden", name="listId", value=id)
    .Edit-Buttons
      button.Edit-Button(type="submit", tabindex='0' style='background-color: rgb(90, 172, 68);') Save
      button.Edit-Button(type="button", tabindex='0' style='background-color: rgb(234, 37, 37);') Delete
      .Edit-Button-Cancel(tabindex='0', hx-get="/cards/cancel/" + id, hx-target='#edit-card', hx-swap="outerHTML")
        +icon-close()

