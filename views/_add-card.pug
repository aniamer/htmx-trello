include _mixins
#edit-card.edit-card
  form(hx-post="/cards", hx-target="#list-" + id, hx-swap="beforeend")
    .card
      textarea.edit-card-textarea(name="label", placeholder='Enter a title for this card...' style='height: 34px;', maxlength="300", autofocus="true")
      input(type="hidden", name="listId", value=id)
    .edit-buttons
      button.edit-button(type="submit", tabindex='0' style='background-color: rgb(90, 172, 68);') Add card
      .edit-button-cancel(tabindex='0', hx-get="/cards/cancel/" + id, hx-target='#edit-card', hx-swap="outerHTML")
        +icon-close()

